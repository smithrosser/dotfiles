{
  //
  // Editor appearance
  //
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Tokyo Night Storm",
  "workbench.preferredLightColorTheme": "Tokyo Night Light",
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.bracketPairColorization.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.codeLensFontSize": 10,

  //
  // Fonts
  //
  "terminal.integrated.fontFamily": "FiraMono Nerd Font",
  "debug.console.fontFamily": "FiraMono Nerd Font",
  "[Log][log]": {
    "editor.fontFamily": "FiraMono Nerd Font",
    "editor.fontSize": 13,
  },
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontSize": 13,
  "editor.fontWeight": 500,
  // "editor.fontLigatures": "'ss07'",
  "terminal.integrated.fontSize": 12,
  "debug.console.fontSize": 13,

  //
  // Behaviour
  //
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  //
  // Vim settings/binds
  //
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    { "before": [";"], "after": [":"] },
    { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] },
    { "before": ["\\"], "commands": ["workbench.view.explorer"] },
    { "before": ["leader", "r", "a"], "commands": ["editor.action.rename"] },
    {
      "before": ["leader", "leader"],
      "commands": ["workbench.action.quickOpen"],
    },
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] },
  ],

  // Misc settings
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": true,
  "editor.inlayHints.fontSize": 10,
  "workbench.editor.empty.hint": "hidden",
  "explorer.excludeGitIgnore": true,
  "git.autofetch": true,
}
