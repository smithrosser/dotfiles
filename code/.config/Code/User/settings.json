{
  //
  // Editor appearance
  //
  "workbench.colorTheme": "Ros√© Pine Dawn",
  "workbench.iconTheme": "quill-icons",
  "editor.fontSize": 16,
  "editor.fontWeight": 400,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.bracketPairColorization.enabled": false,

  //
  // Fonts
  //
  "editor.fontFamily": "Rec Mono Casual",
  "terminal.integrated.fontFamily": "Rec Mono Casual",
  "debug.console.fontFamily": "Rec Mono Casual",
  "[Log][log]": { "editor.fontFamily": "Rec Mono Casual" },

  //
  // Behaviour
  //
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  //
  // Vim settings/binds
  //
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    { "before": [";"], "after": [":"] },
    { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] },
    { "before": ["\\"], "commands": ["workbench.view.explorer"] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] }
  ],

  // Proxy settings (work)
  "http.proxy": "http://rb-proxy-de.bosch.com:8080",
  "http.proxyStrictSSL": false,
  "http.proxyAuthorization": null,
  "http.proxySupport": "override",

  // Misc settings
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": true
}
