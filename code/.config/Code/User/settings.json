{
  //
  // Editor appearance
  //
  "workbench.colorTheme": "Nord Light",
  "workbench.iconTheme": "quill-icons",
  "editor.fontWeight": 400,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.bracketPairColorization.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.codeLensFontSize": 10,
  "editor.lineHeight": 1.2,

  //
  // Fonts
  //
  "editor.fontFamily": "Offlig D",
  "terminal.integrated.fontFamily": "Offlig D",
  "debug.console.fontFamily": "Offlig D",
  "[Log][log]": {
    "editor.fontFamily": "Offlig D",
    "editor.fontSize": 13
  },
  "editor.fontSize": 15.5,
  "terminal.integrated.fontSize": 13,
  "debug.console.fontSize": 13,

  //
  // Behaviour
  //
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[csharp]": { "editor.defaultFormatter": "csharpier.csharpier-vscode" },
  "[xml]": { "editor.defaultFormatter": "csharpier.csharpier-vscode" },
  "[rust]": { "editor.defaultFormatter": "rust-lang.rust-analyzer" },

  //
  // Vim settings/binds
  //
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    { "before": [";"], "after": [":"] },
    { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] },
    { "before": ["\\"], "commands": ["workbench.view.explorer"] },
    { "before": ["leader", "r", "a"], "commands": ["editor.action.rename"] },
    {
      "before": ["leader", "leader"],
      "commands": ["workbench.action.quickOpen"]
    }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] }
  ],

  // Misc settings
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": true,
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "explorer.excludeGitIgnore": true,
  "editor.inlayHints.fontSize": 9
}
